#
### Fonts
#
    font = "Sans"
    font-size = 24  # Default size or adjust as needed

# ... (other font options remain the same)

#
### Text theming (Ensure all visible text is white)
#
    # Default text color
    text-color = #FFFFFF

    # Prompt text theme
    prompt-color = #FFFFFF
    prompt-background = #00000000
    # ...

    # Placeholder text theme (A little dimmer, still white-based)
    placeholder-color = #FFFFFFA8
    placeholder-background = #00000000
    # ...

    # Input text theme
    input-color = #FFFFFF
    input-background = #00000000
    # ...

    # Default result text theme
    default-result-color = #FFFFFF
    default-result-background = #00000000
    # ...

    # Selection text (The currently highlighted item)
    selection-color = #FFFFFF
    # To make the selection stand out on a transparent background, 
    # you might want a semi-transparent *background* for it:
    selection-background = #FFFFFF40
    # selection-background = #00000000  <-- Use this if you want NO background highlight

    # Matching portion of selection text
    selection-match-color = #FFFFFF

# ... (text cursor theme remains the same)

#
### Window theming (Make it a window, not full screen, and transparent)
#
    # Width and height of the window. Use reasonable pixel values.
    width = 800
    height = 500

    # Window background color (RRGGBBAA: AA=00 for full transparency)
    background-color = #00000000

    # Remove borders/outlines for a clean look
    outline-width = 0
    border-width = 0
    corner-radius = 0

    # Padding
    padding-top = 8
    padding-bottom = 8
    padding-left = 8
    padding-right = 8

#
### Window positioning
#
    # Location on screen to anchor the window to.
    anchor = center
